<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.TUserDao">

    <resultMap type="com.example.demo.entity.TUser" id="TUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userPsw" column="user_psw" jdbcType="VARCHAR"/>
        <result property="userEmail" column="user_email" jdbcType="VARCHAR"/>
        <result property="headImg" column="head_img" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="hasPeopleRegistered" resultType="int">
        select count(1)
        from t_user
        where user_name = #{username} or user_email=#{mailbox}
    </select>

    <select id="hasPeople" resultMap="TUserMap">
        select *
        from t_user
        where user_name = #{username}
          and user_psw = #{password}
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="TUserMap">
        select
          id, user_name, user_psw, user_email, head_img
        from zyjblog.t_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TUserMap">
        select
          id, user_name, user_psw, user_email, head_img
        from zyjblog.t_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TUserMap">
        select
          id, user_name, user_psw, user_email, head_img
        from zyjblog.t_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="userPsw != null and userPsw != ''">
                and user_psw = #{userPsw}
            </if>
            <if test="userEmail != null and userEmail != ''">
                and user_email = #{userEmail}
            </if>
            <if test="headImg != null and headImg != ''">
                and head_img = #{headImg}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into zyjblog.t_user(user_name, user_psw, user_email)
        values (#{userName}, #{userPsw}, #{userEmail})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update zyjblog.t_user
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="userPsw != null and userPsw != ''">
                user_psw = #{userPsw},
            </if>
            <if test="userEmail != null and userEmail != ''">
                user_email = #{userEmail},
            </if>
            <if test="headImg != null and headImg != ''">
                head_img = #{headImg},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from zyjblog.t_user where id = #{id}
    </delete>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.TUserDao">

    <resultMap type="com.example.demo.entity.TUser" id="TUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userPsw" column="user_psw" jdbcType="VARCHAR"/>
        <result property="userEmail" column="user_email" jdbcType="VARCHAR"/>
        <result property="headImg" column="head_img" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="INTEGER"/>
        <result property="nickName" column="nick_name" jdbcType="VARCHAR"/>
        <result property="introduction" column="introduction" jdbcType="VARCHAR"/>
        <result property="birthYear" column="birth_year" jdbcType="VARCHAR"/>
        <association property="role" javaType="com.example.demo.entity.TRole">
            <id column="id" property="id"/>
            <result column="role" property="role"/>
        </association>
    </resultMap>

    <select id="hasPeopleRegistered" resultType="int">
        select count(1)
        from t_user
        where user_name = #{username}
           or user_email = #{mailbox}
    </select>

    <select id="hasPeople" resultMap="TUserMap">
        select *
        from t_user u,
             t_role r
        where u.user_name = #{username}
          and u.user_psw = #{password}
          and u.role_id = r.id
    </select>

    <!--查询单个-->
    <select id="queryNameById" resultType="string">
        select nick_name
        from zyjblog.t_user
        where id = #{id}
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="TUserMap">
        select id,
               user_name,
               user_psw,
               user_email,
               head_img,
               role_id,
               sex,
               nick_name,
               introduction,
               birth_year
        from zyjblog.t_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TUserMap">
        select id,
               user_name,
               user_psw,
               user_email,
               head_img,
               role_id,
               sex,
               nick_name,
               introduction,
               birth_year
        from zyjblog.t_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TUserMap">
        select
        id, user_name, user_psw, user_email, head_img
        from zyjblog.t_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="userPsw != null and userPsw != ''">
                and user_psw = #{userPsw}
            </if>
            <if test="userEmail != null and userEmail != ''">
                and user_email = #{userEmail}
            </if>
            <if test="headImg != null and headImg != ''">
                and head_img = #{headImg}
            </if>
        </where>
    </select>

    <select id="findLike" resultMap="TUserMap">
        select
        id, user_name, user_psw, user_email, head_img,sex,
        nick_name,
        introduction,
        birth_year
        from zyjblog.t_user
        <where>
            <if test="text != null and text != ''">
                and user_name like concat('%',#{text},'%')
            </if>
        </where>
    </select>


    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into zyjblog.t_user(user_name, user_psw, user_email, role_id)
        values (#{userName}, #{userPsw}, #{userEmail}, #{roleId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update zyjblog.t_user
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="userPsw != null and userPsw != ''">
                user_psw = #{userPsw},
            </if>
            <if test="userEmail != null and userEmail != ''">
                user_email = #{userEmail},
            </if>
            <if test="headImg != null and headImg != ''">
                head_img = #{headImg},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="nickName != null and nickName != ''">
                nick_name = #{nickName},
            </if>
            <if test="introduction != null and introduction != ''">
                introduction = #{introduction},
            </if>
            <if test="birthYear != null and birthYear != ''">
                birth_year = #{birthYear},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from zyjblog.t_user
        where id = #{id}
    </delete>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.LoginDAO">

    <select id="hasPeople" resultType="com.example.demo.entity.UserPO">
        select *
        from t_user
        where user_name = #{username}
          and user_psw = #{password}
    </select>

    <select id="hasPeopleRegistered" resultType="com.example.demo.entity.UserPO">
        select *
        from t_user
        where user_name = #{username} or user_email=#{mailbox}
    </select>

    <insert id="addAccount">
        insert into t_user(user_name, user_psw,user_email)
        values (#{username}, #{password},#{mailbox})
    </insert>
</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.dao.LoginDAO">

    <select id="hasPeople" resultType="com.example.demo.po.UserPO">
        select *
        from t_user
        where user_name = #{username}
          and user_psw = #{password}
    </select>

    <select id="hasPeopleName" resultType="com.example.demo.po.UserPO">
        select *
        from t_user
        where user_name = #{username}
    </select>

    <insert id="addAccount" keyProperty="id" useGeneratedKeys="true">
        insert into t_user(user_name, user_psw)
        values (#{username}, #{password})
    </insert>
</mapper>
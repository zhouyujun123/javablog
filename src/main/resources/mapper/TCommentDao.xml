<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.TCommentDao">

    <resultMap type="com.example.demo.entity.TComment" id="TCommentMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="articleId" column="article_id" jdbcType="INTEGER"/>
        <result property="articleComment" column="article_comment" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TCommentMap">
        select
          id, article_id, article_comment
        from zyjblog.t_comment
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TCommentMap">
        select
          id, article_id, article_comment
        from zyjblog.t_comment
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TCommentMap">
        select
          id, article_id, article_comment
        from zyjblog.t_comment
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="articleId != null">
                and article_id = #{articleId}
            </if>
            <if test="articleComment != null and articleComment != ''">
                and article_comment = #{articleComment}
            </if>
        </where>
    </select>


    <select id="queryAllByArticleId" resultMap="TCommentMap">
        select
        id, article_id, article_comment
        from zyjblog.t_comment
        <where>
            <if test="articleId != null">
                and article_id = #{articleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into zyjblog.t_comment(article_id, article_comment)
        values (#{articleId}, #{articleComment})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update zyjblog.t_comment
        <set>
            <if test="articleId != null">
                article_id = #{articleId},
            </if>
            <if test="articleComment != null and articleComment != ''">
                article_comment = #{articleComment},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from zyjblog.t_comment where id = #{id}
    </delete>

</mapper>
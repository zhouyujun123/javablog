<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.TCorpusDao">

    <resultMap type="com.example.demo.entity.TCorpus" id="TCorpusMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="corpusId" column="corpus_id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="corpusName" column="corpus_name" jdbcType="VARCHAR"/>
        <result property="corpusTime" column="corpus_time" jdbcType="TIMESTAMP"/>
        <result property="corpusNum" column="corpus_num" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TCorpusMap">
        select
          id, corpus_id, user_id, corpus_name, corpus_time, corpus_num
        from zyjblog.t_corpus
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TCorpusMap">
        select
          id, corpus_id, user_id, corpus_name, corpus_time, corpus_num
        from zyjblog.t_corpus
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TCorpusMap">
        select
          id, corpus_id, user_id, corpus_name, corpus_time, corpus_num
        from zyjblog.t_corpus
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="corpusId != null and corpusId != ''">
                and corpus_id = #{corpusId}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="corpusName != null and corpusName != ''">
                and corpus_name = #{corpusName}
            </if>
            <if test="corpusTime != null">
                and corpus_time = #{corpusTime}
            </if>
            <if test="corpusNum != null">
                and corpus_num = #{corpusNum}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into zyjblog.t_corpus(corpus_id, user_id, corpus_name, corpus_time, corpus_num)
        values (#{corpusId}, #{userId}, #{corpusName}, #{corpusTime}, #{corpusNum})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update zyjblog.t_corpus
        <set>
            <if test="corpusId != null and corpusId != ''">
                corpus_id = #{corpusId},
            </if>
            <if test="userId != null and userId != ''">
                user_id = #{userId},
            </if>
            <if test="corpusName != null and corpusName != ''">
                corpus_name = #{corpusName},
            </if>
            <if test="corpusTime != null">
                corpus_time = #{corpusTime},
            </if>
            <if test="corpusNum != null">
                corpus_num = #{corpusNum},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from zyjblog.t_corpus where id = #{id}
    </delete>

</mapper>